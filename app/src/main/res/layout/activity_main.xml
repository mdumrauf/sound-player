<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:gravity="center_horizontal"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  tools:context="com.zauberlabs.soundplayer.app.MainActivity">

  <TextView
    style="@android:style/TextAppearance.DeviceDefault.Medium"
    android:text="@string/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="55dp"
    android:text="From res/raw"
    android:onClick="onClickFromResRaw"/>

  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:text="From assets/"
    android:onClick="onClickFromAssets"/>

  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:text="From internal storage MODE 1"
    android:onClick="onClickFromInternalStorage1"/>

  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:text="From internal storage MODE 2"
    android:onClick="onClickFromInternalStorage2"/>

  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:text="From expansion pack"
    android:onClick="onClickFromExpansionPack"/>

</LinearLayout>
